<%= render({ :partial => "pages/intro.html.erb" })%>
<!-- Note the lack of underscore -->
<p class="lead">
  Your guesses:
</p>

<!-- Loop over all of the user's guesses here -->
<p class="lead">
<% @old_guesses.each do |zebra| %>
  
  <% if zebra.fetch("third_num").to_i > zebra.fetch("second_num").to_i && 
  zebra.fetch("second_num").to_i > zebra.fetch("first_num").to_i%>

  <span class="badge badge-success">
<%= zebra.fetch("first_num") %> 

  </span>

  <span class="badge badge-success">
    <%= zebra.fetch("second_num") %> 
  </span>

  <span class="badge badge-success">
    <%= zebra.fetch("third_num") %> 
  </span>

  
  <span class="text-success">
      Yes!
  </span>

  <% else %>

  <span class="badge badge-danger">
<%= zebra.fetch("first_num") %> 

  </span>

  <span class="badge badge-danger">
    <%= zebra.fetch("second_num") %> 
  </span>

  <span class="badge badge-danger">
    <%= zebra.fetch("third_num") %> 
  </span>



   <span class="text-danger">
      No!
  </span>
 <% end %> 
  
 
</p>
<% end %>

<!-- End loop -->

<p class="lead"><strong>Enter a sequence to test:</strong></p>

<form action="/record_guess" method="post">
  <label for="first_box">
    First number
  </label>

  <input id="first_box" name="first_num" type="text">

  <label for="second_box">
    Second number
  </label>

  <input id="second_box" name="second_num" type="text">

  <label for="third_box">
    Third number
  </label>

  <input id="third_box" name="third_num" type="text">

  <button>
    Check
  </button>
</form>

